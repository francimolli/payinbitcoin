---
import HeaderLink from '@/components/HeaderLink'
import TwitterIcon from '@/components/icons/TwitterIcon'
import GithubIcon from '@/components/icons/GithubIcon'
import TagIcon from './icons/TagIcon.astro'
const today = new Date()
// ADD YOUR SOCIAL NETWORKS HERE
const SOCIALNETWORKS = [
	{
		name: 'Github',
		url: 'https://github.com/francimolli',
		icon: GithubIcon
	},

	{
		name: 'Twitter',
		url: 'https://github.com/francimolli',
		icon: TwitterIcon
	}
]
---

<footer class='flex justify-center items-center w-full px-16 h-28 border-t-2'>
	&copy; {today.getFullYear()} Francesco Mollica .
	<HeaderLink href='/tags' class='flex items-center gap-1 text-2xl md:text-base mr-2 ml-2'>
		<TagIcon />
	</HeaderLink>
	<div class='flex justify-center items-center md:justify-end gap-3 md:p-0'>
		{
			SOCIALNETWORKS.map((network) => (
				<HeaderLink class='' href={network.url} target='_blank' aria-label={network.name}>
					<span>{<network.icon />} </span>
				</HeaderLink>
			))
		}
	</div>
</footer>
